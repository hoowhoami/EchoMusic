{
  "type": "module",
  "name": "echomusic",
  "version": "1.0.0",
  "main": "electron/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=development electronmon .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "electron:build": "npm run build && npx electron-builder",
    "dist": "npm run build && npx electron-builder --publish=never",
    "install:all": "npm install && cd server && pnpm install",
    "install:server": "cd server && pnpm install",
    "server:dev": "cd server && pnpm run dev",
    "server:start": "cd server && pnpm start",
    "server:build": "cd server && pnpm run pkgjs",
    "server:pkg:all": "cd server && pnpm run pkg:all",
    "server:pkg:win": "cd server && pnpm run pkgwin",
    "server:pkg:linux": "cd server && pnpm run pkglinux",
    "server:pkg:macos": "cd server && pnpm run pkgmacos",
    "dev:all": "concurrently \"npm run server:dev\" \"npm run dev\" \"wait-on http://localhost:3000 http://localhost:10086 && npm run electron\"",
    "build:all": "npm run build && npm run server:pkg:macos",
    "dist:all": "npm run build:all && cross-env NODE_ENV=production npx electron-builder --publish=never",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/howler": "^2.2.12",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "esbuild": "^0.25.9",
    "esbuild-node-externals": "^1.18.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.4.0",
    "esno": "^4.8.0",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sass": "^1.91.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-eslint": "^1.8.1",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.6",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@vicons/ionicons5": "^0.13.0",
    "@vicons/material": "^0.13.0",
    "@vicons/tabler": "^0.13.0",
    "@videojs-player/vue": "^1.0.0",
    "@vueuse/core": "^13.7.0",
    "color2k": "^2.0.3",
    "dayjs": "^1.11.13",
    "howler": "^2.2.4",
    "lodash-es": "^4.17.21",
    "mitt": "^3.0.1",
    "naive-ui": "^2.42.0",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "vue": "^3.5.19",
    "vue-router": "^4.5.1"
  },
  "build": {
    "appId": "com.echomusic.app",
    "productName": "EchoMusic",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "app/icons/**/*",
      "loading.html"
    ],
    "extraResources": [
      {
        "from": "dist/assets",
        "to": "assets"
      },
      {
        "from": "server/bin/app_macos",
        "to": "server/bin/app_macos"
      },
      {
        "from": "server/.env",
        "to": "server/.env"
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
